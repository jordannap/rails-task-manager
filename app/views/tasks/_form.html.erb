

<form>
<%= form_for(@task) do |f| %>
  <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label"> <%= f.label :title %></label>
    <%= f.text_field :title %>

  </div>
  <div class="mb-3">
    <%= f.label :details %>
    <%= f.text_field :details %>

  </div>
  <div class="mb-3 form-check">
    <%= f.label :completed %>
    <%= f.check_box :completed %>

  </div>
  <button type="submit" class="btn btn-primary"> <%= f.submit %></button>
<% end %>

</form>
